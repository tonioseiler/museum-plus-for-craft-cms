{% macro printArray(arr) %}
    {% for k,v in arr %}
        <li>
        {% if v is iterable %}
            {% if k matches '/^\\d+$/' %}
                {# ?? #}
            {% else %}
                <li style="font-style: italic;">{{ k }}:</li>
            {% endif %}
            <ul style="padding-left: 1rem; margin-bottom: 0.6rem;">
                {{ _self.printArray(v) }}
            </ul>
        {% else %}
            <span style="font-style: italic;">{{ k }}</span>: {{ v }}
            <br/>
        {% endif %}
        </li>
    {% endfor %}
{% endmacro %}

