                                btn.disabled = false;
                                $('#fields-extracontentExtraTitle').val(response.extraTitle);
                                $('#fields-extracontentText').val(response.extraDescription);
                            },
                            error: function(xhr, textStatus, errorThrown) {
                                console.error('AJAX Error:', errorThrown);
                                btn.disabled = false;
                            }
                        });
                    });
                </script>
            </div>
