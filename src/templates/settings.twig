    label: 'Control Panel Title',
    instructions: 'How the plugin will be called in the Control Panel',
    id: 'cpTitle',
    name: 'cpTitle',
    value: settings['cpTitle']})
}}

{{ forms.textField({
    label: 'Classifier',
    instructions: '',
    id: 'classifier',
    name: 'classifier',
    value: settings['classifier']})
}}

{{ forms.textField({
    label: 'Hostname',
    instructions: '',
    id: 'hostname',
    name: 'hostname',
    value: settings['hostname']})
}}

{{ forms.textField({
    label: 'Username',
    instructions: '',
    id: 'username',
    name: 'username',
    value: settings['username']})
}}

{{ forms.textField({
    label: 'Password',
    instructions: '',
    id: 'password',
    name: 'password',
    type: 'password',
    value: settings['password']})
}}
